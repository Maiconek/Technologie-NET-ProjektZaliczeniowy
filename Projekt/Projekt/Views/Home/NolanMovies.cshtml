@{
}

@model IEnumerable<Movie>

<table style="width: 50%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Year of Production</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Movie m in Model)
        {
                <tr>
                    <td>@m.Title</td>
                    <td>@m.Director</td>
                    <td>@m.YearOfProduction</td>
                </tr>
        }
    </tbody>
</table>