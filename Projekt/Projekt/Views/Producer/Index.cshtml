@model IEnumerable<Producer>

@{
    ViewData["Title"] = "Index";
}


<table style="width: 50%;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Year</th>
            <th>Age</th>
            <th><a asp-action="Create">Create</a></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Producer p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Country</td>
                <td>@p.YearOfFoundation</td>
                <td><age-helper age-helper-value="p.YearOfFoundation"></age-helper></td>
                <td><a asp-action="Info" asp-route-id="@p.ProducerId">Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@p.ProducerId">Update</a></td>
                <td>
                    <form asp-route-id="@p.ProducerId" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



