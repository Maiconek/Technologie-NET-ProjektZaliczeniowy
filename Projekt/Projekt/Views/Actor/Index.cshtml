@model IEnumerable<Actor>

@{
    ViewData["Title"] = "Index";
}

<table style="width: 50%">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Age</th>
            <th>Year of Birth</th>
            <th><a asp-action="Create">Create</a></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Actor a in Model)
        {
            <tr>
                <td>@a.FirstName</td>
                <td>@a.LastName</td>
                <td><age-helper age-helper-value="a.YearOfBirth"></age-helper></td>
                <td>@a.YearOfBirth</td>
                <td><a asp-action="" asp-route-id="">Update</a></td>
                <td>
                    <form asp-route-id="@a.ActorId" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
