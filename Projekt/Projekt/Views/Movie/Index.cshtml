@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Index";
}

<table style="width: 50%">
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Genre</th>
            <th>Year of Production</th>
            <th><a asp-action="Create">Create</a></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Movie m in Model)
        {
            <tr>
                <td>@m.Title</td>
                <td>@m.Director</td>
                <td>@m.Genre</td>
                <td>@m.YearOfProduction</td>
                <td><a asp-action="Info" asp-route-id="@m.MovieId">Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@m.MovieId">Update</a></td>
                <td>
                    <form asp-route-id="@m.MovieId" asp-action="Delete" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


