@model Movie

@{
    ViewData["Title"] = "Info";
}

<div class="details">
    <h2>Info</h2>
    <p>Title: @Model.Title</p>
    <p>Director: @Model.Director</p>
    <p>Genre: @Model.Genre</p>
    <p>Year of Production: @Model.YearOfProduction</p>
    <p>Producer: @Model.Producer.Name</p>
    <p><a asp-controller="Movie" asp-action="Index">Go back</a></p>
</div>

