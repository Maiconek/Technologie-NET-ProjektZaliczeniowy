@model Movie

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<a asp-action="Index">Go back</a>

<form method="post" asp-action="Create">

    <p>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title"/>
        <span asp-validation-for="Title"></span>
    </p>
    <p>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <span asp-validation-for="Director"></span>
    </p>
    <p>
        <label asp-for="Genre">Genre:</label>
        <input asp-for="Genre" />
        <span asp-validation-for="Genre"></span>
    </p>
    <p>
        <label asp-for="YearOfProduction">Year of Production:</label>
        <input asp-for="YearOfProduction" />
        <span asp-validation-for="YearOfProduction"></span>
    </p>
    <p>
        <label asp-for="ProducerId">Producer</label>
        <select asp-for="ProducerId" asp-items="ViewBag.ProducerId"></select>
    </p>
    <p><button type="submit">Create</button></p>
</form>